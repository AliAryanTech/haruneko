{
    "compilerOptions": {
        "types": [
            "node",
            "chrome",
            "react",
            "react-dom"
        ],
        "jsx": "react",
        "target": "ES2020",
        "module": "ES2020",
        "outDir": "build.web",
        "rootDir": "src",
        "sourceMap": true,
        "removeComments": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}