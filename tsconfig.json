        "outDir": "build",
        "rootDir": "src",
        "sourceMap": true,
        "removeComments": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}