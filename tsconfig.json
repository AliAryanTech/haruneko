{
    "compilerOptions": {
        "types": [
            "node",
            "chrome",
            "react",
            "react-dom"
        ],
        "jsx": "react",
        "target": "esnext",
        "module": "esnext",
        "outDir": "build.www",
        "rootDir": "src",
        "sourceMap": true,
        "inlineSources": true,
        "inlineSourceMap": false,
        "removeComments": true, // keep comments for webpack, otherwise directives would be removed
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}