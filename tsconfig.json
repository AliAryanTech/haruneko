{
    "compilerOptions": {
        "types": [
            "node",
            "chrome",
            "react",
            "react-dom",
            "jest"
        ],
        "strict": false, // TODO: should be migrated to true
        "jsx": "react",
        "target": "esnext",
        "module": "esnext",
        "outDir": "build.web",
        "rootDir": "src",
        "sourceMap": true,
        "inlineSources": true,
        "inlineSourceMap": false,
        "removeComments": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}